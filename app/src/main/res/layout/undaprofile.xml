<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5D3D3"
    tools:context=".users.UserProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECE8E8"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/R3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/biblebg" />

        <LinearLayout
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="5dp"
            android:background="#fff"
            android:orientation="vertical">

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_account_box"
                android:drawablePadding="5dp"
                android:hint="name"
                android:inputType="textCapSentences"
                android:lines="1"
                android:maxLength="50"
                android:textColor="#000"
                android:textColorHint="#ADABAB" />

            <EditText
                android:id="@+id/tagLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_format_align"
                android:drawablePadding="5dp"
                android:hint="tagLine"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:textColor="#000"
                android:textColorHint="#ADABAB" />

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="5dp"
                android:hint="Phone number"
                android:lines="1"
                android:maxLength="20"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#ADABAB" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/userInfo"
            android:layout_margin="5dp"
            android:background="#fff"
            android:gravity="center">

            <Button
                android:id="@+id/updateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textAllCaps="false" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/account"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="5dp" />

            <ImageView
                android:id="@+id/changeProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/ic_photo_camera" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>