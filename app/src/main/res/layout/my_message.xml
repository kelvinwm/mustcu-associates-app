<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingStart="60dp"
    android:paddingEnd="15dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="You"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentEnd="true"
        android:background="@drawable/my_message"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingStart="3dp"
        android:paddingTop="5dp"
        android:paddingEnd="3dp">

        <FrameLayout
            android:id="@+id/myFrame"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/myRel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <VideoView
                    android:id="@+id/videoView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/playVideo"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="-10dp"
                android:background="@drawable/circle_play"
                android:scaleType="fitXY"
                android:src="@drawable/ic_play_arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/sendImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_image"
                android:visibility="gone" />

        </FrameLayout>

        <!--        VIEW FILE-->
        <LinearLayout
            android:id="@+id/fileLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/fileImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@drawable/docimage"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="File Name"
                android:textColor="#fff"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <!--        LISTEN AUDIO-->
        <LinearLayout
            android:id="@+id/audioLayout"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#90333333"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/playAudio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#90333333"
                android:scaleType="fitXY"
                android:src="@android:drawable/ic_media_play" />

            <SeekBar
                android:id="@+id/audioProgrs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/audioTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff" />
        </LinearLayout>

        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Placeholder message"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#fff"
            emojicon:emojiconSize="28sp" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="12:00pm"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#fff"
            android:textStyle="italic" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/commentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="1dp">

            <TextView
                android:id="@+id/numberOfComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Comments"
                android:textColor="#fff"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/del_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:textSize="12sp"
        android:textStyle="italic" />
</RelativeLayout>